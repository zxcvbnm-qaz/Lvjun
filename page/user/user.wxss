.header {
  position: relative;
  height: 160rpx;
  line-height: 100rpx;
  padding: 30rpx 30rpx 30rpx 150rpx;
  box-sizing: border-box;
  background: rgb(255, 255, 255);
  font-size: 28rpx;
  color: #000;
}

.header .thumb {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.header .motto {
  float: right;
}

.orders-box {
  color: #999;
  font-size: 28rpx;
}

.orders {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center;
}

.bindPos-btn {
  height: 80rpx;
  width: 10%;
  color: white;
  background: #a2c7f2;
  border-radius: 600rpx;
}

.orders-list {
  padding-left: 30rpx;
  border-bottom: 20rpx solid #ededed;
}

.orders-list:last-child {
  border-bottom: 0;
}

.orders-number {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.orders-detail {
  position: relative;
  height: 120rpx;
  padding: 35rpx 20rpx 35rpx 170rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.orders-detail image {
  position: absolute;
  left: 0;
  top: 20rpx;
  width: 150rpx;
  height: 150rpx;
}

.orders-detail view {
  line-height: 60rpx;
}

.orders-detail .orders-status {
  position: absolute;
  right: 20rpx;
  top: 35rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #b42f2d;
}

.orders-footer {
  height: 60rpx;
  line-height: 60rpx;
  color: #2f2f2f;
  padding: 15rpx 30rpx 15rpx 0;
}

.orders-footer .orders-btn {
  float: right;
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background: #b42f2d;
  color: #fff;
}

.mainFunction {
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  margin-bottom: 40rpx;
  margin-top: 35rpx;
  border: gray solid 4rpx;
  border-radius: 20rpx;
}

.function1 {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
}

.inventory {
  width: 100%;
  display: flex;
  justify-content: center;
}

.inventory image {
  height: 80rpx;
  width: 80rpx;
}

.mineFunction {
  position: relative;
}

.mineFunction text {
  font-size: 36rpx;
  margin-left: 40rpx;
  font-weight: bold;
}

.line {
  margin-top: 5rpx;
  clear: both;
  background: #E0E3DA;
  width: 100%;
  height: 4rpx;
}

.aFunction {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 40rpx;
}

.mineFunction image {
  height: 60rpx;
  width: 60rpx;
  float: left;
  margin-right: 15rpx;
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.aFunction text {
  font-size: 35rpx;
  text-align: center;
  font-weight: normal;
}
.changeId{
  margin-top: 200rpx;
}
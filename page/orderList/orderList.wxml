<navigation title="已选菜品" direction="center"></navigation>
<view class="main">
  <view wx:if="{{hasList}}">
    <view class="cart-box">
      <view class="cart-list" wx:for="{{carts}}" wx:key="id">
        <icon wx:if="{{item.selected}}" type="success_circle" color="#000" data-index="{{index}}" class="cart-pro-select" bindtap="selectList" />
        <icon wx:else type="circle" color="#000" class="cart-pro-select" data-index="{{index}}" bindtap="selectList" size="24" />
        <navigator url="">
          <image class="cart-thumb" src="{{item.imageUrl}}"></image>
        </navigator>
        <text class="cart-pro-name">{{item.name}}</text>
        <text class="cart-pro-price">￥{{item.price}}</text>
        <text class="cart-del" bindtap="deleteList" data-index="{{index}}">×</text>
      </view>
    </view>

    <view class="cart-footer">
      <icon wx:if="{{selectAllStatus}}" type="success_circle" color="#000" class="total-select" bindtap="selectAll" />
      <icon wx:else type="circle" color="#000" class="total-select" bindtap="selectAll" />
      <view class="order-icon">
          <image src="../../images/icon3.png" bindtap="toSubmit"></image>
      </view>
      <text bindtap="selectAll">全选</text>
    </view>
  </view>
  <view wx:else>
    <view class="cart-no-data">目前是空的哦~</view>
  </view>
</view>